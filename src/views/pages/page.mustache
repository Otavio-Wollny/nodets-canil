{{ >partials/header }}

{{ #banner }}
<section class="banner" style="background-image: url('images/{{ background }}')">{{ titulo }}</section>
<h2>{{ titulo }} disponíveis para adoção</h2>
{{ /banner }}

<div class="container list">
    {{ #lista }}
        <div class="item">
            <img src="images/{{ image }}" class="item--image" />
            <div class="item--name">{{ name }}</div>
            <div class="item--color">{{ color }}</div>
            <div class="item--genre">{{ sex }}</div>
        </div>
    {{ /lista }}
</div>

{{ ^lista }}
    <div class="container no-list">
    <h2 style="text-align-center">Não foram encontrados Pets com os dados informados na pesquisa.</h2>
    </div>
{{ /lista }}

{{ >partials/footer }}